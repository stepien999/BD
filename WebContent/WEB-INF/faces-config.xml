	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/announcements/edit_announcement.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>delete_announcement_success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/announcements/user_announcements.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>redirect_edit_announcement</from-outcome>
			<to-view-id>/user/announcements/edit_announcement.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/announcements/*</from-view-id>
		<navigation-case>
			<from-outcome>redirect_see_announcement</from-outcome>
			<to-view-id>/user/announcements/see_announcement.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/category/*</from-view-id>
		<navigation-case>
			<from-outcome>redirect_announcement_by_category</from-outcome>
			<to-view-id>/user/announcements/see_announcements_by_category.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/announcements/see_announcements</from-view-id>
		<navigation-case>
			<from-outcome>redirect_see_announcement_city_category</from-outcome>
			<to-view-id>/user/announcements/see_announcements_by_category.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/guest/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>failed</from-outcome>
			<to-view-id>/guest/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
