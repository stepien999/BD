	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>redirect_announcements_by_category</from-outcome>
			<to-view-id>/guest/see_announcements.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>redirect_see_announcement_page</from-outcome>
			<to-view-id>/guest/see_announcement.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>redirect_see_announcement_page</from-outcome>
			<to-view-id>/guest/see_announcement.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>redirect_manage_categories</from-outcome>
			<to-view-id>/admin/category/see_categories.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>see_all_users</from-outcome>
			<to-view-id>/admin/users/see_users.xhtml</to-view-id>
