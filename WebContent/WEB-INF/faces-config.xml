			<from-outcome>see_all_users</from-outcome>
			<to-view-id>/admin/users/see_users.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/announcements/add_announcement.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>announcement_save_success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/announcements/edit_announcement.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>edit_announcement_success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
